<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Final_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



    <style>

        @@media all and (min-width: 1200px) {
            .container {
                max-width: 1537px;
            }
        }

        .form-control-dark {
            border-color: var(--bs-gray);
        }

            .form-control-dark:focus {
                border-color: #fff;
                box-shadow: 0 0 0 .25rem rgba(255, 255, 255, .25);
            }

        .text-small {
            font-size: 85%;
        }

        .dropdown-toggle:not(:focus) {
            outline: 0;
        }

        header {
            background-color: #005500;
        }

        footer {
            background: #646464;
            color: white;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }


        .b-example-divider {
            width: 100%;
            height: 3rem;
            background-color: rgba(0, 0, 0, .1);
            border: solid rgba(0, 0, 0, .15);
            border-width: 1px 0;
            box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
        }

        .b-example-vr {
            flex-shrink: 0;
            width: 1.5rem;
            height: 100vh;
        }

        .nav-link {
            color: white;
        }

            .nav-link:hover {
                color: lightgray;
            }

        .link-body-emphasis:hover {
            color: lightgray;
        }

        .bi {
            vertical-align: -.125em;
            fill: currentColor;
            color: white;
        }

        .nav-scroller {
            position: relative;
            z-index: 2;
            height: 2.75rem;
            overflow-y: hidden;
        }

            .nav-scroller .nav {
                display: flex;
                flex-wrap: nowrap;
                padding-bottom: 1rem;
                margin-top: -1px;
                overflow-x: auto;
                text-align: center;
                white-space: nowrap;
                -webkit-overflow-scrolling: touch;
            }

        .btn-bd-primary {
            --bd-violet-bg: #712cf9;
            --bd-violet-rgb: 112.520718, 44.062154, 249.437846;
            --bs-btn-font-weight: 600;
            --bs-btn-color: var(--bs-white);
            --bs-btn-bg: var(--bd-violet-bg);
            --bs-btn-border-color: var(--bd-violet-bg);
            --bs-btn-hover-color: var(--bs-white);
            --bs-btn-hover-bg: #6528e0;
            --bs-btn-hover-border-color: #6528e0;
            --bs-btn-focus-shadow-rgb: var(--bd-violet-rgb);
            --bs-btn-active-color: var(--bs-btn-hover-color);
            --bs-btn-active-bg: #5a23c8;
            --bs-btn-active-border-color: #5a23c8;
        }

        .bd-mode-toggle {
            z-index: 1500;
        }

        body {
            max-width: 100%;
            min-height: 100%;
        }

        .basket {
            font-size: 33px;
            color: white;
            padding-right: 10px;
        }

            .basket:hover {
                color: lightgray;
                cursor: pointer;
            }
    </style>
    <script>


        document.addEventListener("DOMContentLoaded", function (event) {
            const btnleft = document.querySelectorAll(".left"); 
            if (btnleft) {
                btnleft.forEach((ele, index) => {
                    ele.addEventListener('click', () => {
                        var container = document.querySelectorAll(".rowC");
                        const scrollPosition = container[index].scrollLeft - 200;
                        console.log(scrollPosition);
                        container[index].scroll({ left: scrollPosition , behavior: "smooth" });
                       //container[index].scrollLeft = scrollPosition;
                    });
                });
            }
            const btnRigth = document.querySelectorAll(".right");
            if (btnRigth) {
                btnRigth.forEach((ele, index) => {
                    ele.addEventListener('click', () => {
                        var container = document.querySelectorAll(".rowC");
                        console.log(index, container, container[index]);
                        const scrollPosition = container[index].scrollLeft + 200;
                      
                        container[index].scroll({ left: scrollPosition, behavior: "smooth" });
                     
                    });
                });
            }
        });

        function scrollRight() {
            var container = document.getElementsByClassName("rowC");
            container[0].scroll({ left: 200, behavior: "smooth" });
        }

    </script>
</head>
<body>
    <header class="p-3 text-bg-dark navbar-expand-md navbar-dark fixed-top">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="https://static.vecteezy.com/system/resources/previews/010/073/169/large_2x/creative-medicine-logo-template-pharmacy-logo-template-vector.jpg" alt="Logo" class="me-2" width="150" height="60">
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a class="nav-link px-2 text-body-secondary" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:20px">Home</a></li>
                <li><a class="nav-link px-2 text-body-secondary" asp-area="" asp-controller="Products" asp-action="Index" style="font-size:20px">Products</a></li>
               
                <li><a class="nav-link px-2 text-body-secondary" asp-area="" asp-controller="OrderBasket" asp-action="Index" style="font-size:20px">Your Orders</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" method="get" asp-controller="Products" asp-action="SearchProduct" style="width: 500px;margin-right: 86px !important;">
                <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search" name="SearchContent">

            </form>
            <a class="basket" asp-area="" asp-controller="Basket" asp-action="Index"><i class="fas fa-shopping-basket"></i></a>
            <div class="text-end">
                <partial name="_LoginPartial" />

            </div>
        </div>
    </header>


    <main role="main" style="padding-top:90px">
        @RenderBody()
    </main>


